{
  "private": true,
  "name": "emojibase",
  "version": "1.0.0-rc.2",
  "description": "Evergreen emoji datasets and regex patterns.",
  "scripts": {
    "babel": "build-lib ./src -d ./lib",
    "build": "mkdir -p ./packages/emojibase/lib/ && cp ./lib/*.js ./packages/emojibase/lib/",
    "coverage": "run-coverage",
    "eslint": "run-linter ./bin ./src ./tests",
    "flow": "type-check",
    "generate": "yarn run babel && node ./bin/generateEmoji.js",
    "table": "node ./bin/buildFilesizeTable.js",
    "jest": "NODE_ENV=test run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "prerelease": "yarn run generate && yarn run build && yarn test",
    "test": "yarn run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/emojibase.git"
  },
  "keywords": [
    "emoji",
    "emojibase",
    "data",
    "dataset",
    "database",
    "db",
    "regex",
    "shortname",
    "shortcode",
    "unicode",
    "cldr",
    "cdn"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/emojibase/issues"
  },
  "homepage": "https://github.com/milesj/emojibase#readme",
  "dependencies": {
    "babel-runtime": "^6.25.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.18.0",
    "chalk": "^2.0.1",
    "cheerio": "^1.0.0-rc.2",
    "filesize": "^3.5.10",
    "glob": "^7.1.2",
    "gzip-size": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "regexgen": "^1.3.0"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.node.json5",
    "rules": {
      "no-magic-numbers": 0,
      "no-param-reassign": 0
    }
  },
  "jest": {
    "preset": "@milesj/build-tool-config"
  }
}
