{
  "name": "emojibase-root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "beemo run-script build-packages",
    "clean": "rimraf ./packages/*/{lib,esm}/ && lerna clean --yes",
    "clean:cache": "rimraf ./cache",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint --color --report-unused-disable-directives ./src ./packages/*/{src,tests}",
    "flow": "beemo flow check --workspaces",
    "generate": "yarn run build && node ./bin/generateEmoji.js && node ./bin/buildFilesizeTable.js && cp ./packages/emojibase-data/en/data.json ./packages/emojibase-test-utils/test-data.json",
    "jest": "beemo jest --colors --logHeapUsage --workspaces",
    "posttest": "yarn run flow --silent",
    "pretest": "yarn run eslint --silent",
    "test": "yarn run jest --silent",
    "prettier": "beemo prettier --write ./README.md \"./packages/*/{bin,src,tests}/**/*.js\" \"./packages/*/*.{md,json}\"",
    "package": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "release": "lerna publish",
    "release:force": "yarn run release --force-publish=*",
    "prerelease": "yarn run package",
    "docs": "gitbook build --log=debug --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.63.0",
    "chalk": "^2.3.1",
    "cheerio": "^1.0.0-rc.2",
    "filesize": "^3.6.0",
    "glob": "^7.1.2",
    "gzip-size": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "lerna": "^2.9.0",
    "regexgen": "^1.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "flow",
      "jest",
      "prettier"
    ],
    "eslint": {
      "rules": {
        "no-magic-numbers": 0,
        "no-param-reassign": 0
      }
    },
    "flow": {
      "libs": [
        "./packages/emojibase/emojibase.js.flow",
        "./packages/emojibase-data/emojibase-data.js.flow",
        "./packages/emojibase-regex/emojibase-regex.js.flow",
        "./packages/emojibase-test-utils/emojibase-test-utils.js.flow"
      ]
    }
  }
}
