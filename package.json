{
  "name": "emojibase-root",
  "private": true,
  "scripts": {
    "babel": "beemo run-script build-packages",
    "build": "yarn run babel",
    "build:dts": "beemo run-script generate-dts",
    "build:src": "beemo typescript --allowJs",
    "clean": "rimraf ./packages/*/{lib,esm}/ && lerna clean --yes",
    "clean:cache": "rimraf ./cache",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug --log=debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "generate": "yarn run build:src && node ./bin/generateEmoji.js && node ./bin/buildFilesizeTable.js && cp ./packages/data/en/data.json ./packages/test-utils/test-data.json",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "prettier": "beemo prettier \"./src/**/*.js\"",
    "package": "yarn run clean && yarn run build && yarn test",
    "prerelease": "yarn run package",
    "release": "lerna publish",
    "release:force": "yarn run release --force-publish=*",
    "type": "beemo typescript --noEmit"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.80.0",
    "@types/chalk": "^2.2.0",
    "@types/cheerio": "^0.22.7",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/node": "^9.6.2",
    "@types/node-fetch": "^1.6.8",
    "chalk": "^2.3.2",
    "cheerio": "^1.0.0-rc.2",
    "filesize": "^3.6.1",
    "glob": "^7.1.2",
    "gzip-size": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "lerna": "^2.9.1",
    "regexgen": "^1.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "rules": {
        "no-magic-numbers": "off",
        "no-param-reassign": "off"
      }
    },
    "typescript": {
      "include": ["./packages/*/src/**/*", "./src/**/*", "./types/**/*"]
    }
  },
  "browserslist": [
    "ie 10"
  ]
}
