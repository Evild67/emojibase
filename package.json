{
  "private": true,
  "name": "emojibase",
  "description": "Evergreen emoji datasets, regex patterns, and more.",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:slow": "lerna bootstrap --concurrency=1",
    "build": "build-lib ./src -d ./lib && build-lib ./packages/emojibase/src -d ./packages/emojibase/lib && build-lib ./packages/emojibase-test-utils/src -d ./packages/emojibase-test-utils/lib",
    "coverage": "run-coverage",
    "eslint": "run-linter ./bin ./src ./tests ./packages/**/{src,tests}",
    "flow": "type-check",
    "generate": "yarn run build && node ./bin/generateEmoji.js && node ./bin/buildFilesizeTable.js && cp ./packages/emojibase-data/en/data.json ./packages/emojibase-test-utils/test-data.json",
    "jest": "NODE_ENV=test run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "publish": "yarn run build && yarn run test && lerna publish",
    "publish:force": "npm run publish -- --force-publish=*",
    "test": "yarn run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/emojibase.git"
  },
  "keywords": [
    "emoji",
    "emojibase",
    "data",
    "dataset",
    "database",
    "db",
    "regex",
    "shortname",
    "shortcode",
    "unicode",
    "cldr",
    "cdn"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/emojibase/issues"
  },
  "homepage": "https://github.com/milesj/emojibase#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.19.0",
    "chalk": "^2.0.1",
    "cheerio": "^1.0.0-rc.2",
    "filesize": "^3.5.10",
    "glob": "^7.1.2",
    "gzip-size": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lerna": "^2.0.0",
    "regexgen": "^1.3.0"
  },
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.node.json5",
    "rules": {
      "no-magic-numbers": 0,
      "no-param-reassign": 0
    }
  },
  "jest": {
    "preset": "@milesj/build-tool-config",
    "roots": [
      "./packages",
      "./tests"
    ],
    "testRegex": "./packages/emojibase([-a-z]+)?/tests/.*\\.test\\.js$"
  }
}
